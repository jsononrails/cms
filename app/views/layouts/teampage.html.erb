<% content_for :content do %>

<div class="team-title-section">
	<div class="row team-section-title-container">		
		<div class="team-section-title-rule large-12 columns "></div>
		<div class="team-section-title"><%= @page.intro %></div>
	</div>
</div>
<% @page_children.each do |section| %>
	
	<div class="team-section <%= cycle('even', 'odd') %>">
		
		<% if section.picture %>
			<div class="row">
				<div class="team-section-picture large-4 columns">
		 	  		<%= image_tag(section.picture.url_content, class: "", alt: section.picture.alttag, title: section.picture.alttag) %>				
				</div>
				<div class=" large-8 columns left">
					<%= raw section.content %>
				</div>
			</div>
		<% end %>
		
	
	</div>

<% end %>

<% end %>

<%= render template: "layouts/application" %>